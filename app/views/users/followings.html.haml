%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Email
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= link_to 'Show', user
        %td= link_to 'Unfollow', user_relationship_url(user_id: current_user.id, id: Relationship.find_by(follower_id: current_user.id, following_id: user.id)), method: :delete, data: {confirm: 'Are you sure?' }


