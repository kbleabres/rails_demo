%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Email
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= link_to 'Show', user
        - if !current_user.following?(user)
          %td= link_to 'Follow', relationships_url(relationship: {follower_id: current_user.id, following_id: user.id}), method: :post

%br

